#include <unistd.h>

void    ft_print_combn(int n)
{
        int     digits[10];
        int     i;
        int     pos;

        if (n <= 0 || n >= 10)
                return;

        i = 0;
        while (i < n)
        {
                digits[i] = i;
                i++;
        }

        while (1)
        {
                i = 0;
                while (i < n)
                {
                        char c = digits[i] + '0';
                        write(1, &c, 1);
                        i++;
                }

                if (digits[0] == 10 - n)
                        break;
                write(1, ", ", 2);

                pos = n - 1;
                while (pos >= 0 && digits[pos] == 9 - (n - 1 - pos))
                        pos--;

                digits[pos]++;
                while (++pos < n)
                        digits[pos] = digits[pos - 1] + 1;
        }
}

